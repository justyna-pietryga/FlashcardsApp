<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.justyna.flashcards.FlashcardsActivity">

    <TextView
        android:id="@+id/vocabulary_flashcard_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoInMargin_imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_selector"
        android:gravity="center"
        android:minWidth="300dp"
        android:minHeight="70dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2b4654"
        android:textSize="30sp" />

    <Button
        android:id="@+id/invertWord_button"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vocabulary_flashcard_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="31dp"
        android:text="@string/invert_words_text_button" />

    <Button
        android:id="@+id/nextWord_button"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/invertWord_button"
        android:layout_alignEnd="@+id/vocabulary_flashcard_textView"
        android:layout_alignRight="@+id/vocabulary_flashcard_textView"
        android:text="@string/next_word_text_button" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:id="@+id/logoInMargin_imageView"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

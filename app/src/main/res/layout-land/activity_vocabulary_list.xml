<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.justyna.flashcards.VocabularyListActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/vocabulary_listView"
        android:layout_below="@+id/category_textView"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategoria"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/category_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_edit"
        android:visibility="invisible"
        android:id="@+id/editWord_button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/deleteWord_button"
        android:layout_toStartOf="@+id/deleteWord_button" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_delete"
        android:visibility="invisible"
        android:id="@+id/deleteWord_button"
        android:layout_alignTop="@+id/return_button"
        android:layout_toLeftOf="@+id/return_button"
        android:layout_toStartOf="@+id/return_button" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:minWidth="60dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_return"
        android:visibility="invisible"
        android:id="@+id/return_button"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/category_textView"
        android:layout_toEndOf="@+id/category_textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:layout_height="40dp"
        android:text="@string/open_as_flashcards_text_button"
        android:textSize="12sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:id="@+id/openAsFlashcards_button"
        android:layout_alignTop="@+id/deleteWord_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
